{
  "author": "https://www.trustfractal.com",
  "manifest_version": 2,
  "version": "0.2.0",
  "short_name": "Fractal ID Wallet",
  "name": "Fractal ID Wallet",
  "description": "The Fractal ID Wallet is a browser extension that allows users to store their validated decentralized identity (DID) credentials.",
  "browser_action": {
    "default_title": "Fractal ID Wallet",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon_16.png",
      "19": "img/icon_19.png",
      "32": "img/icon_32.png",
      "38": "img/icon_38.png",
      "64": "img/icon_64.png",
      "128": "img/icon_128.png",
      "512": "img/icon_512.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+F",
        "mac": "Alt+Shift+F",
        "chromeos": "Alt+Shift+F",
        "linux": "Alt+Shift+F"
      }
    }
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["sdk.bundle.js"],
  "icons": {
    "16": "img/icon_16.png",
    "19": "img/icon_19.png",
    "32": "img/icon_32.png",
    "38": "img/icon_38.png",
    "64": "img/icon_64.png",
    "128": "img/icon_128.png",
    "512": "img/icon_512.png"
  },
  "permissions": ["tabs", "unlimitedStorage"]
}
