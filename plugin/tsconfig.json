{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@models/*": ["src/models/*"],
      "@background/*": ["src/scripts/background/*"],
      "@contentScript/*": ["src/scripts/contentScript/*"],
      "@sdk/*": ["src/scripts/sdk/*"],
      "@popup/*": ["src/popup/*"],
      "@redux/*": ["src/redux/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["build", "dev"]
}
